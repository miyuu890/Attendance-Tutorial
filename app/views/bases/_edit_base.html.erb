<%= form_with(model: @base, url:update_base_path(base.id),local: true) do |f| %>
<%= render 'shared/error_messages_bases', object: @base %>

  <%=f.label :base_number, "拠点番号", class: "label--edit" %>
  <%= f.number_field :base_number, class: "form-control" %>
  
  <%=f.label :base_name, "拠点名", class: "label--edit" %>
  <%= f.text_field :base_name, class: "form-control" %>
  
  <%=f.label :base_type, "拠点種類", class: "label--edit" %>
  <%= f.select :base_type, {'出勤': '出勤', '退勤': '退勤'},class: "form-control form-control-lg", required: true %>
  
  <%= f.submit class: "btn btn-primary btn-block" %>
<% end %>